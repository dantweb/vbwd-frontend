{
  "name": "@vbwd/view-component",
  "version": "0.1.0",
  "description": "Shared Vue 3 component library and SDK for VBWD applications",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.mjs",
      "types": "./dist/components/index.d.ts"
    },
    "./styles": "./dist/styles/index.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vbwd/view-component.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts,.tsx,.vue",
    "lint:fix": "eslint src tests --ext .ts,.tsx,.vue --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,vue}\" \"tests/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,vue}\" \"tests/**/*.{ts,tsx}\""
  },
  "peerDependencies": {
    "pinia": "^2.0.0",
    "vue": "^3.4.0",
    "vue-router": "^4.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@testing-library/vue": "^8.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "happy-dom": "^12.0.0",
    "jsdom": "^27.4.0",
    "msw": "^2.12.4",
    "pinia": "^2.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "vue": "^3.4.0",
    "vue-router": "^4.0.0"
  },
  "keywords": [
    "vbwd",
    "sdk",
    "vue",
    "typescript",
    "plugin-system"
  ],
  "author": "VBWD Team",
  "license": "CC0-1.0"
}
